<p id="notice"><%= notice %></p>
<div class="container">
  <header>
    <h3>
      <%= @post.heading %>
    </h3>
    <p>
      <%= link_to @post.external_url, @post.external_url %>
    </p>
  </header>
  <div class="row">
    <div class="col-md-7" id="post-images">
      <% if @images.blank? %>
        <%= image_tag "https://ssl.dspncdn.com/jobs/400x/companyPicture_default.png", class: "thumbnail" %>
      <% else %>
        <% @images.each do |image| %>
          <%= image_tag image.url, class: "thumbnail" %>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-5" >
      <div class="basic-info">
        <h4>Basic Info</h4>
        Price: <%= number_to_currency(@post.price, precision: 0) %>
        Last Updated: <%= "#{time_ago_in_words(Time.at(@post.timestamp.to_i))} ago" %>
        <% if @post.neighborhood.present? %>
          Neighborhood: <%= @post.neighborhood %><br>
        <% end %>
        <% if @post.bedrooms.present? %>
          Bedrooms: <%= @post.bedrooms %><br>
        <% end %>
        <% if @post.bathrooms.present? %>
          Bathrooms: <%= @post.bathrooms %><br>
        <% end %>
        <% if @post.sqft.present? %>
          Square Footage: <%= @post.sqft %><br>
        <% end %>
        <% if @post.parking.present? %>
          Parking: <%= @post.parking %><br>
        <% end %>
      </div>
      <div class="description">
        <h4>Description</h4>
        <p>
          <%= @post.body %>
        </p>
      </div>
    </div>
  </div>
</div>
