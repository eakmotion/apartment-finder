<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Posts</h1>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Heading</th>
        <th>Body</th>
        <th>Price</th>
        <th>Neighborhood</th>
        <th>External url</th>
        <th>Timestamp</th>
        <th>Sqft</th>
        <th>Bedrooms</th>
        <th>Bathrooms</th>
        <th>Parking</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.heading %></td>
          <td><%= post.body %></td>
          <td><%= post.price %></td>
          <td><%= post.neighborhood %></td>
          <td><%= post.external_url %></td>
          <td><%= post.timestamp %></td>
          <td><%= post.sqft %></td>
          <td><%= post.bedrooms %></td>
          <td><%= post.bathrooms %></td>
          <td><%= post.parking %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
